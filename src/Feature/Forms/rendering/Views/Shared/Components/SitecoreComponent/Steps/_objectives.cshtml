<form id="objectivesForm" class="form-horizontal" method="post" action="/submitApplication/">
    <input type="hidden" id="applicationId" name="applicationId" asp-for="ApplicationId" />
    <div class="form-card">
        <div class="row">
            <div class="col-7">
                <h2 class="fs-title">Objectives and Motivation:</h2>
            </div>
            <div class="col-5">
                <h2 class="steps">Step 4 - 7</h2>
            </div>
        </div>
        <div class="form-group">
            <label for="eligibility">Why do you believe you are eligible to be selected to be a Sitecore MVP?</label>
            <textarea class="form-control" id="eligibility" rows="3" asp-for="Eligibility"></textarea>
        </div>
        <div class="form-group">
            <label for="objectives">What are your objectives for the next year?</label>
            <textarea class="form-control" id="objectives" rows="3" asp-for="Objectives"></textarea>
        </div>
    </div>
    <button class="btn btn-primary" id="btnStep4" type="submit">Next</button>
    <button class="btn btn-primary" id="btnPrevious" type="submit">Previous</button>
</form>

